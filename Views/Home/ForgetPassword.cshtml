
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreatePassword</title>
    <style>
        input {
            padding: 14px 20px;
            margin: 8px 0px;
            box-sizing: border-box;
            width: 100%;
            border: 1px solid black;
        }

        a.my_Class {
            background-color: #333;
            color: white;
            font-size: medium;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
        }
    </style>
</head>
<body>
    @Html.Partial("_MenuBar")
    <div>
        @using (Html.BeginForm())
        {<h1>Create New Password</h1>
            <label for="email"><b>Email Id</b></label>
            <input type="email" placeholder="Email Id" name="email" required />
            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>

            <label for="password-repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repeat Password" name="password-repeat" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
            <button type="submit">@Html.ActionLink("Confirm Password", "CreatePassword", "Home", new { @class = "my_Class" })</button>}
    </div>
</body>
</html>